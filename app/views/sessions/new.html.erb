<h1 align="center">Login</h1>

<%= form_for(:session, :html => { class: "form-horizontal", role: "form" }, url: login_path) do |f| %>
  <!-- Email -->
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :email %>
    </div>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
    </div>
  </div>
  <!-- Password -->
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :password %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>
  <!-- Button -->
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Log in" , class: "btn btn-primary btn-md" %>
      </div>
    </div>
<% end %>

<!-- Links -->
<div class="col-xs-4 col-xs-offset-4">
  [<%= link_to "Cancel and go back to articles", articles_path %>]
</div>